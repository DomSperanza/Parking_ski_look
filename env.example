# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///parking_monitor.db
# For production: postgresql://user:password@localhost/parking_monitor

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=slcparkingmonitor@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_USE_TLS=True
MAIL_DEFAULT_SENDER=slcparkingmonitor@gmail.com
# Legacy (to be removed)
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password

# Payment Configuration (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Application Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=development
DEBUG=True

# Monitoring Configuration
DEFAULT_CHECK_INTERVAL=10
MAX_CONCURRENT_JOBS=5

# Resort URLs
BRIGHTON_URL=https://reservenski.parkbrightonresort.com/select-parking
SOLITUDE_URL=https://reservenski.parksolitude.com/select-parking
